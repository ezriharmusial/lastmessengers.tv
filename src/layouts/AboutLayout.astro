---
import Share from '~components/ux/Share.astro';

let { title, subtitle, description, callToAction, image } = Astro.props?.data || Astro.props.frontmatter

---
	<div class="relative overflow-hidden bg-no-repeat bg-cover" style={"background-position: 50%;background-image: url('" + (image || 'https://mdbcdn.b-cdn.net/img/new/slides/146.webp') + "');height: 500px;"}>
		<div class="absolute top-0 right-0 bottom-0 left-0 w-full h-full overflow-hidden bg-fixed" style="background-color: rgba(0, 0, 0, 0.75)">
			<div class="flex justify-center items-center h-full">
				<div class="text-center text-white px-6 md:px-12">
					<h1 class="text-5xl md:text-6xl xl:text-7xl font-bold tracking-tight mb-12">
						{subtitle}
					</h1>
					<button type="button" class="inline-block px-7 py-3 border-2 border-white text-white font-medium text-sm leading-snug uppercase rounded hover:bg-black hover:bg-opacity-5 focus:outline-none focus:ring-0 transition duration-150 ease-in-out" data-mdb-ripple="true" data-mdb-ripple-color="light" >
						{callToAction}
					</button>
				</div>
			</div>
		</div>
	</div>

	<div class="container mx-auto p-8 space-y-8">
		<h1>{title}</h1>
		<h2>{subtitle}</h2>
		<p>{description}</p>
		<hr />
		<section class="card card-hover p-4">
			<slot />
		</section>
		<hr />
		<section class="flex space-x-2">
			<Share />
		</section>
	</div>
