---
	import { getCollection } from 'astro:content';
	import LinkCastLayout from '@layouts/LinkCastLayout.astro';
	import { getEntryBySlug } from 'astro:content';
	// 1. Generate a new path for every collection entry


	export async function getStaticPaths() {
		const linkCasts = await getCollection('linkcasts');
		return linkCasts.map(entry => ({
			params: { slug: entry.slug }, props: { entry },
		}));
	}

	let linkcasts = getStaticPaths();
	const { slug } = Astro.params;
	const entry = await getEntryBySlug('linkcasts', slug);

---

<LinkCastLayout linkcasts={linkcasts}>
</LinkCastLayout>