---
import { getEntryBySlug } from "astro:content";

import BrandFlag from "~components/ui/BrandFlag.astro";
import PlayerLayout from "@layouts/PlayerLayout.astro";
import Album from "@components/music/Album.astro";
import Artists from "@components/artists/Artists.astro";

let unityAlbum = await getEntryBySlug('albums', 'unity-album-2022')
let { title, image, imageAlt, seoTitle, description } = unityAlbum.data

---

<PlayerLayout title={seoTitle || title} image={image} imageAlt={imageAlt || seoTitle || title} description="Restoring one of the Ancient music values~TRURH, by packing messages as enjoyable songs targeting curious ears of the general public." >

<section class="bg-cover bg-center w-full" style="background-image: url('https://source.unsplash.com/random?Stage%20performance');">
  <div class="bg-black/75 md:p-28 p-6 pt-24 text-left text-white">
    <div class="container mx-auto flex portrait:flex-col items-center gap-8">
      <div class="landscape:w-2/3">
        <BrandFlag />
        <h1 class="unstyled text-5xl font-medium my-8">LastMessengerS Album Releases</h1>
        <p class="unstyled text-3xl mb-12">We proudly share with you our produced Albums. </p>
      </div>
      <div class="landscape:w-1/3 portrait:w-full">
        <img src="https://source.unsplash.com/random?popstar" class="h-72 w-3/4 object-cover rounded-xl" alt="Layout Image">
        </div>
    </div>
  </div>
</section>

<Album />
<section>
  <Artists />
</section>

</PlayerLayout>
