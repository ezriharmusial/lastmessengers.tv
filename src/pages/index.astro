---
import BaseLayout from '../layouts/BaseLayout.astro';
import { Avatar } from '@skeletonlabs/skeleton';
import { Image } from "@astrojs/image/components";

	const openGraph = {
	basic: {
		title: "LastMessengerS Project Website",
		type: "music",
		image: "https://picsum.photos/seed/home/1920/1080/",
		url: "https://localhost:3000/"
	},
	optional: {
		description: "Description for the homepage",
		locale: 'en-us',
		siteName: "LastMessengerS Music"
	},
	image: {
		alt: "Alt for the homepage image"
	}
	}
---

<BaseLayout {openGraph}>
<div class="bg-gradient-to-br from-slate-900 to-slate-600 w-screen min-h-screen md:p-28 p-6 pt-24">

